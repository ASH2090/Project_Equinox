@model Project_Equinox.Models.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2">
                <i class="fas fa-user text-info me-3"></i>User Details
            </h1>
            <hr>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>@Model.Name
                        @if (Model.IsCoach)
                        {
                            <span class="badge bg-warning text-dark ms-2">
                                <i class="fas fa-dumbbell me-1"></i>Coach
                            </span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email):</dt>
                                <dd class="col-sm-8">
                                    <a href="mailto:@Model.Email">@Html.DisplayFor(model => model.Email)</a>
                                </dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber):</dt>
                                <dd class="col-sm-8">
                                    <a href="tel:@Model.PhoneNumber">@Html.DisplayFor(model => model.PhoneNumber)</a>
                                </dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DOB):</dt>
                                <dd class="col-sm-8">@Model.DOB.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var age = DateTime.Now.Year - Model.DOB.Year;
                                        if (DateTime.Now.DayOfYear < Model.DOB.DayOfYear)
                                            age--;
                                    }
                                    @age years old
                                </dd>

                                <dt class="col-sm-4">Role:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsCoach)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-user-tie me-1"></i>Coach
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user me-1"></i>Member
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        @if (Model.IsCoach && Model.Classes != null && Model.Classes.Any())
        {
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header bg-warning text-dark">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-dumbbell me-2"></i>Assigned Classes (@Model.Classes.Count())
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @foreach (var gymClass in Model.Classes)
                            {
                                <div class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@gymClass.Name</strong>
                                        <br>
                                        <small class="text-muted">@gymClass.ClassDay - @gymClass.Time</small>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i>Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.UserId" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
