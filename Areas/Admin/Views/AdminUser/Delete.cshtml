@model Project_Equinox.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h2 text-danger">
                <i class="fas fa-trash text-danger me-3"></i>Delete User
            </h1>
            <hr>
        </div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-warning" role="alert">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning!</strong> Are you sure you want to delete this user? This action cannot be undone.
            </div>

            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>@Model.Name
                        @if (Model.IsCoach)
                        {
                            <span class="badge bg-warning text-dark ms-2">
                                <i class="fas fa-dumbbell me-1"></i>Coach
                            </span>
                        }
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Name):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Email):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.PhoneNumber):</dt>
                                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.DOB):</dt>
                                <dd class="col-sm-8">@Model.DOB.ToString("MMMM dd, yyyy")</dd>

                                <dt class="col-sm-4">Age:</dt>
                                <dd class="col-sm-8">
                                    @{
                                        var age = DateTime.Now.Year - Model.DOB.Year;
                                        if (DateTime.Now.DayOfYear < Model.DOB.DayOfYear)
                                            age--;
                                    }
                                    @age years old
                                </dd>

                                <dt class="col-sm-4">Role:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.IsCoach)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="fas fa-user-tie me-1"></i>Coach
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-user me-1"></i>Member
                                        </span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>

                    @if (Model.IsCoach && Model.Classes != null && Model.Classes.Any())
                    {
                        <div class="alert alert-danger mt-3" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Cannot Delete:</strong> This user is assigned as a coach to @Model.Classes.Count() class(es). 
                            Please reassign these classes to another coach before deleting this user.
                            
                            <div class="mt-2">
                                <strong>Assigned Classes:</strong>
                                <ul class="mb-0">
                                    @foreach (var gymClass in Model.Classes)
                                    {
                                        <li>@gymClass.Name (@gymClass.ClassDay - @gymClass.Time)</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    <form asp-action="Delete" class="mt-4">
                        <input type="hidden" asp-for="UserId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-info me-2">
                                    <i class="fas fa-eye me-1"></i>View Details
                                </a>
                                @if (!Model.IsCoach || Model.Classes == null || !Model.Classes.Any())
                                {
                                    <button type="submit" class="btn btn-danger" 
                                            onclick="return confirm('Are you absolutely sure you want to delete this user? This action cannot be undone.')">
                                        <i class="fas fa-trash me-1"></i>Confirm Delete
                                    </button>
                                }
                                else
                                {
                                    <button type="button" class="btn btn-danger" disabled title="Cannot delete coach with assigned classes">
                                        <i class="fas fa-ban me-1"></i>Cannot Delete
                                    </button>
                                }
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
