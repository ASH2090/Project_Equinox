@model Project_Equinox.Models.Club
@{
    ViewData["Title"] = "Delete Club";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h3 class="mb-0"><i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion</h3>
                </div>
                <div class="card-body text-center p-4">
                    <p class="fs-5">
                        Are you sure you want to delete the following club?
                    </p>
                    <h4 class="text-danger fw-bold">@Model.Name</h4>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="ClubId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-trash-fill"></i> Delete
                            </button>
                            <a asp-controller="ManageClub" asp-action="List" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
