@model Project_Equinox.Models.Club
@{
    string title = ViewBag.Action + " Club";
    ViewData["Title"] = title;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">@title</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">Club Name</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-building"></i></span>
                                <input asp-for="Name" class="form-control" placeholder="Enter club name">
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label fw-semibold">Phone Number</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-telephone"></i></span>
                                <input asp-for="PhoneNumber" class="form-control" placeholder="e.g. 312-123-4567">
                            </div>
                            <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                        </div>

                        <input type="hidden" asp-for="ClubId" />

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <button type="submit" class="btn btn-success px-4">
                                <i class="bi bi-check-circle"></i> Save
                            </button>
                            <a asp-controller="ManageClub" asp-action="List" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
