@model ClassCategory
@{
    ViewData["Title"] = Model.ClassCategoryId == 0 ? "Add Class Category" : "Edit Class Category";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>@ViewData["Title"]</h2>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="ClassCategoryId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label"></label>
                <input asp-for="Image" class="form-control" placeholder="Enter image file name (e.g., yoga.jpg)" />
                <div class="form-text">
                    <small>Just enter the image file name. No file upload required.</small>
                </div>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">
                    @(Model.ClassCategoryId == 0 ? "Add" : "Save Changes")
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
