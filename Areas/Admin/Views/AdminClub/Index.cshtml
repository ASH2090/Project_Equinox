@model IEnumerable<Project_Equinox.Models.Club>
@{
    ViewData["Title"] = "Manage Clubs";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Edit" class="btn btn-primary">Create New Club</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var club in Model)
        {
            <tr>
                <td>@club.Name</td>
                <td>@club.PhoneNumber</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@club.ClubId" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@club.ClubId" class="btn btn-sm btn-danger" 
                       onclick="return confirm('Are you sure you want to delete this club?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
