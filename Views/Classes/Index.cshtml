

@{
    ViewData["Title"] = "Equinox Classes";
}

<div class="container-fluid p-0">
    <div class="hero-section">
        <div class="hero-content">
            <h1 class="display-4 fw-bold text-white mb-3">Find Your Perfect Class</h1>
            <p class="lead text-white mb-4">Filter by club and category to discover classes that match your fitness goals</p>
        </div>
    </div>

    <div class="container py-5">
        <!-- Filter Section -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title mb-3">
                            <i class="fas fa-filter me-2"></i>Filter Classes
                        </h5>
                        
                        <form method="get" asp-action="Index">
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <label for="ClubId" class="form-label">Club Location</label>
                                    <select asp-for="ClubId" class="form-select">
                                        <option value="0">All Clubs</option>
                                        @foreach (var club in Model.Clubs)
                                        {
                                            <option value="@club.ClubId">@club.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <label for="CategoryId" class="form-label">Class Category</label>
                                    <select asp-for="CategoryId" class="form-select">
                                        <option value="0">All Categories</option>
                                        @foreach (var category in Model.Categories)
                                        {
                                            <option value="@category.ClassCategoryId">@category.Name</option>
                                        }
                                    </select>
                                </div>
                                <div class="col-md-4 d-flex align-items-end">
                                    <button type="submit" class="btn btn-primary me-2">
                                        <i class="fas fa-search me-1"></i>Filter
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i>Clear
                                    </a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Results Count -->
        <div class="row mb-3">
            <div class="col-12">
                <h4 class="mb-0">
                    @Model.Classes.Count() class(es) found
                    @if (Model.ClubId != 0 || Model.CategoryId != 0)
                    {
                        <small class="text-muted">(filtered)</small>
                    }
                </h4>
            </div>
        </div>

        <!-- Classes Grid -->
        <div class="row">
            @if (Model.Classes.Any())
            {
                @foreach (var equinoxClass in Model.Classes)
                {
                    <div class="col-lg-4 col-md-6 mb-4">
                        <div class="card h-100 shadow-sm class-card">
                            @if (!string.IsNullOrEmpty(equinoxClass.ClassPicture))
                            {
                                <img src="@equinoxClass.ClassPicture" class="card-img-top class-img-index" alt="@equinoxClass.Name">
                            }
                            else
                            {
                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light class-img-placeholder-index">
                                    <i class="fas fa-dumbbell fa-3x text-muted"></i>
                                </div>
                            }
                            
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@equinoxClass.Name</h5>
                                <p class="card-text">
                                    <i class="fas fa-map-marker-alt text-primary me-1"></i>
                                    @equinoxClass.Club?.Name
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-tag text-success me-1"></i>
                                    @equinoxClass.ClassCategory?.Name
                                </p>
                                <p class="card-text">
                                    <i class="fas fa-calendar text-info me-1"></i>
                                    @equinoxClass.ClassDay at @equinoxClass.Time
                                </p>
                                
                                <div class="mt-auto pt-2">
                                    @if (Model.BookedClassIds.Contains(equinoxClass.EquinoxClassId))
                                    {
                                        <span class="badge bg-success me-2">
                                            <i class="fas fa-check me-1"></i>Booked
                                        </span>
                                    }
                                    
                                    <div class="btn-group w-100" role="group">
                                        <a asp-action="Detail" asp-route-id="@equinoxClass.EquinoxClassId" 
                                           class="btn btn-outline-primary">
                                            <i class="fas fa-info-circle me-1"></i>Details
                                        </a>
                                        @if (!Model.BookedClassIds.Contains(equinoxClass.EquinoxClassId))
                                        {
                                            <a asp-action="Book" asp-route-id="@equinoxClass.EquinoxClassId" 
                                               class="btn btn-primary">
                                                <i class="fas fa-plus me-1"></i>Book
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12">
                    <div class="alert alert-info text-center py-5">
                        <i class="fas fa-search fa-3x mb-3"></i>
                        <h4>No classes found</h4>
                        <p class="mb-0">Try adjusting your filters to see more classes.</p>
                    </div>
                </div>
            }
        </div>
    </div>
</div>