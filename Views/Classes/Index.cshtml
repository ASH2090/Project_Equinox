@model Project_Equinox.Models.ClassFilterViewModel

@{
    ViewData["Title"] = "Equinox Classes";
}

<div class="hero-section mb-4">
    <div class="hero-content text-center">
        <h1 class="display-4 fw-bold text-white mb-3">Find Your Perfect Class</h1>
        <p class="lead text-white mb-4">Filter by club and category to discover classes that match your fitness goals</p>
    </div>
</div>

<main class="container mt-4">

<!-- Filter Section -->
<div class="row justify-content-center mb-4">
    <div class="col-lg-6 col-xl-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3 text-center">
                    <i class="fas fa-filter me-2"></i>Filter Classes
                </h5>
                
                <form method="get" asp-action="Index">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="ClubId" class="form-label">Club Location</label>
                            <select asp-for="ClubId" class="form-select">
                                <option value="0">All Clubs</option>
                                @foreach (var club in Model.Clubs)
                                {
                                    <option value="@club.ClubId">@club.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="CategoryId" class="form-label">Class Category</label>
                            <select asp-for="CategoryId" class="form-select">
                                <option value="0">All Categories</option>
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.ClassCategoryId">@category.Name</option>
                                }
                            </select>
                        </div>
                        <div class="col-12 text-center mt-3">
                            <button type="submit" class="btn btn-primary me-2">
                                <i class="fas fa-search me-1"></i>Filter
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-times me-1"></i>Clear
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    <div class="cards-grid ">
        <div class="row"> 
        @foreach (var equinoxClass in Model.Classes)
        {
            <div class="class-card col-lg-4">
                <a asp-action="Detail" asp-route-id="@equinoxClass.EquinoxClassId" class="text-decoration-none text-dark">
                    
                    <!-- Class Image -->
                    @if (!string.IsNullOrEmpty(equinoxClass.ClassPicture))
                    {
                        <img src="@equinoxClass.ClassPicture" class="class-image" alt="@equinoxClass.Name" />
                    }
                    else
                    {
                        <div class="class-image-placeholder">
                            <i class="fas fa-dumbbell"></i>
                        </div>
                    }
                    
                    <!-- Card Content -->
                    <div class="card-content">
                        <h3 class="class-title">@equinoxClass.Name</h3>
                        
                        <div class="class-details">
                            <!-- Coach Info -->
                            <div class="class-detail">
                                <i class="fas fa-user-tie"></i>
                                <strong>Coach:</strong>
                                <span>@(equinoxClass.Coach?.Name ?? "TBA")</span>
                            </div>
                            
                            <!-- Club Location -->
                            <div class="class-detail">
                                <i class="fas fa-map-marker-alt"></i>
                                <strong>Club:</strong>
                                <span>@equinoxClass.Club?.Name</span>
                            </div>
                            
                            <!-- Category -->
                            <div class="class-detail">
                                <i class="fas fa-tags"></i>
                                <strong>Category:</strong>
                                <span>@equinoxClass.ClassCategory?.Name</span>
                            </div>
                            
                            <!-- Schedule Info -->
                            <div class="schedule-row">
                                <div class="schedule-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <strong>Day</strong>
                                    <span>@equinoxClass.ClassDay</span>
                                </div>
                                <div class="schedule-item">
                                    <i class="fas fa-clock"></i>
                                    <strong>Time</strong>
                                    <span>@equinoxClass.Time</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div></div>
    
    <!-- No Classes Found Message -->
    @if (!Model.Classes.Any())
    {
        <div class="no-classes">
            <i class="fas fa-search fa-5x"></i>
            <h3>No classes found</h3>
            <p>Try adjusting your filters to discover more amazing classes!</p>
        </div>
    }
</div>

</main>