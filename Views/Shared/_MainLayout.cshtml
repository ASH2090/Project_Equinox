@{
    Layout = "_Layout";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Equinox</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNavbar">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Club" asp-action="List">Clubs</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Classes" asp-action="Index">Classes</a></li>        
                    <li class="nav-item"><a class="nav-link" asp-controller="Membership" asp-action="List">Membership</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="PrivateClass" asp-action="List">Private Training</a></li>
                </ul>
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container mt-4">
    @RenderBody()
</main>

<footer class="footer mt-auto py-3 bg-light">
    <div class="container text-center">
        <a asp-controller="Home" asp-action="Contact">Contact Us</a> |
        <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a> |
        <a asp-controller="Home" asp-action="Terms">Terms & Condition</a> |
        <a asp-controller="Home" asp-action="CookiePolicy">Cookie Policies</a>
    </div>
</footer>