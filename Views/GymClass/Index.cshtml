@model ClassFilterViewModel

@{
    ViewData["Title"] = "Equinox Classes";
    Layout = "_MainLayout";
}

<div class="main-container">
   
    <div class="hero-header">
        <h1 class="hero-title">Find Your Perfect Class</h1>
        <p class="hero-subtitle">Discover amazing fitness classes tailored to your goals and schedule</p>
    </div>

    <div class="filter-section">
        <h2 class="filter-title">Filter Classes</h2>
        
        <form method="get" asp-action="Index">
            <div class="row g-4">
                <!-- Club Filter -->
                <div class="col-md-6">
                    <div class="filter-group">
                        <label for="ClubId" class="filter-label">
                            <i class="fas fa-building me-2"></i>Select Club
                        </label>
                        <select asp-for="ClubId" class="form-select form-select-custom">
                            <option value="0">All Clubs</option>
                            @if (Model.Clubs != null)
                            {
                                @foreach (var club in Model.Clubs)
                                {
                                    <option value="@club.ClubId">@club.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
                
                <!-- Category Filter -->
                <div class="col-md-6">
                    <div class="filter-group">
                        <label for="CategoryId" class="filter-label">
                            <i class="fas fa-tags me-2"></i>Select Category
                        </label>
                        <select asp-for="CategoryId" class="form-select form-select-custom">
                            <option value="0">All Categories</option>
                            @if (Model.Categories != null)
                            {
                                @foreach (var category in Model.Categories)
                                {
                                    <option value="@category.ClassCategoryId">@category.Name</option>
                                }
                            }
                        </select>
                    </div>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="row g-3 mt-4">
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-filter w-100">
                        <i class="fas fa-search me-2"></i>Apply Filters
                    </button>
                </div>
                <div class="col-sm-6">
                    <a asp-action="Clear" class="btn btn-outline-secondary w-100">
                        <i class="fas fa-times me-2"></i>Clear All
                    </a>
                </div>
            </div>
        </form>
    </div>

    <div class="cards-grid">
        @foreach (var equinoxClass in Model.Classes)
        {
            <div class="class-card">
                <a asp-action="Detail" asp-route-id="@equinoxClass.EquinoxClassId" class="text-decoration-none text-dark">
                    
                    <!-- Class Image -->
                    @if (!string.IsNullOrEmpty(equinoxClass.ClassPicture))
                    {
                        <img src="@equinoxClass.ClassPicture" class="class-image" alt="@equinoxClass.Name" />
                    }
                    else
                    {
                        <div class="class-image-placeholder">
                            <i class="fas fa-dumbbell"></i>
                        </div>
                    }
                    
                    <!-- Card Content -->
                    <div class="card-content">
                        <h3 class="class-title">@equinoxClass.Name</h3>
                        
                        <div class="class-details">
                            <!-- Coach Info -->
                            <div class="class-detail">
                                <i class="fas fa-user-tie"></i>
                                <strong>Coach:</strong>
                                <span>@(equinoxClass.Coach?.Name ?? "TBA")</span>
                            </div>
                            
                            <!-- Club Location -->
                            <div class="class-detail">
                                <i class="fas fa-map-marker-alt"></i>
                                <strong>Club:</strong>
                                <span>@equinoxClass.Club?.Name</span>
                            </div>
                            
                            <!-- Category -->
                            <div class="class-detail">
                                <i class="fas fa-tags"></i>
                                <strong>Category:</strong>
                                <span>@equinoxClass.ClassCategory?.Name</span>
                            </div>
                            
                            <!-- Schedule Info -->
                            <div class="schedule-row">
                                <div class="schedule-item">
                                    <i class="fas fa-calendar-alt"></i>
                                    <strong>Day</strong>
                                    <span>@equinoxClass.ClassDay</span>
                                </div>
                                <div class="schedule-item">
                                    <i class="fas fa-clock"></i>
                                    <strong>Time</strong>
                                    <span>@equinoxClass.Time</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
    
    <!-- No Classes Found Message -->
    @if (!Model.Classes.Any())
    {
        <div class="no-classes">
            <i class="fas fa-search fa-5x"></i>
            <h3>No classes found</h3>
            <p>Try adjusting your filters to discover more amazing classes!</p>
        </div>
    }
</div>